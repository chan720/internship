<section class="relative bg-cover bg-center h-96 mb-12" style="background-image: url('<%= image_path("https://media.product.which.co.uk/prod/images/ar_2to1_1500x750/22a475e555d7-best-laptop-deals.jpg") %>');">
    <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center">
      <div class="text-center text-white">
        <h1 class="text-4xl font-bold mb-4">Welcome to Our Store</h1>
        <p class="text-xl mb-6">Find the best products for your needs</p>
        <%= link_to 'Shop Now', products_path, class: 'bg-blue-500 text-white font-bold py-2 px-6 rounded hover:bg-blue-600' %>
      </div>
    </div>
  </section>

 <section class="mb-12">
  <h2 class="text-3xl font-bold mb-6 text-center">Shop Latest Products</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
    <% @products.each do |product| %>
      <div class="text-center">
        <%= link_to product_path(product) do %>
          <%= image_tag product&.url, alt: product.name, class: 'w-full h-48 object-cover mb-4 rounded-lg' %>
          <h3 class="text-xl font-semibold text-gray-00"><%= product.name %></h3>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
