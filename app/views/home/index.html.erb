<!-- app/views/home/index.html.erb -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home | My E-commerce Store</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application.tailwind', 'data-turbo-track': 'reload' %>
</head>
<body class="font-sans bg-gray-100">

  <!-- Navigation Bar -->
  <nav class="bg-blue-800 p-4">
    <div class="container mx-auto flex items-center justify-between">
      <a href="/" class="text-white text-2xl font-bold">MyStore</a>
      <div>
        <%= link_to 'Home', root_path, class: 'text-white hover:text-gray-300 mx-2' %>
        <%= link_to 'Products', products_path, class: 'text-white hover:text-gray-300 mx-2' %>
        <%= link_to 'Cart', cart_path, class: 'text-white hover:text-gray-300 mx-2' %>
        <%= link_to 'Login', new_user_session_path, class: 'text-white hover:text-gray-300 mx-2' %>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="relative bg-cover bg-center h-96" style="background-image: url('<%= asset_path('hero-image.jpg') %>');">
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="relative flex items-center justify-center h-full">
      <div class="text-center text-white p-8">
        <h1 class="text-4xl font-bold mb-4">Welcome to My E-commerce Store</h1>
        <p class="text-lg mb-6">Discover amazing products and exclusive offers</p>
        <%= link_to 'Shop Now', products_path, class: 'bg-yellow-500 text-black font-bold py-3 px-6 rounded hover:bg-yellow-600' %>
      </div>
    </div>
  </section>

  <!-- Rich Text Section -->
  <section class="py-12 px-4">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-bold mb-4">Why Choose Us?</h2>
      <p class="text-lg text-gray-700 mb-6">We offer the best products at unbeatable prices. Our team is dedicated to providing excellent customer service and ensuring your satisfaction with every purchase.</p>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-blue-800 text-white py-6">
    <div class="container mx-auto text-center">
      <p>&copy; <%= Time.current.year %> My E-commerce Store. All rights reserved.</p>
    </div>
  </footer>

</body>
</html>
