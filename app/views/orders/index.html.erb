<div class="container mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
  <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">My Orders</h1>
  <% if @orders.any? %>
    <ul class="space-y-4">
      <% @orders.each do |order| %>
        <li class="flex justify-between items-center p-4 bg-gray-100 rounded-lg shadow-md">
          <span class="text-blue-500 font-bold">Order <%= "#{order.id}"%></span>

          <span class="text-lg font-semibold text-gray-700">
            Total Price: $<%= order.total_price %>
          </span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-center text-gray-600 text-xl mt-4">No orders found.</p>
  <% end %>
</div>
