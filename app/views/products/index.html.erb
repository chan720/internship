<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8 text-center">All Products</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <% @products.each do |product| %>
      <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <%# <%= image_tag product.image_url, alt: product.name, class: "w-full h-48 object-cover" %> %>
        
        <div class="p-4">
          <h2 class="text-xl font-semibold mb-2"><%= product.name %></h2>
          <p class="text-gray-600 mb-4"><%= truncate(product.description, length: 100) %></p>
          <p class="text-lg font-bold mb-4">$<%= product.price %></p>

          <%= link_to 'View Details', product_path(product), class: "block bg-blue-500 text-white text-center py-2 px-4 rounded hover:bg-blue-600" %>
          <%# <%= link_to 'Add to Cart', add_to_cart_path(product), method: :post, class: "block bg-green-500 text-white text-center py-2 px-4 rounded hover:bg-green-600 mt-2" %> %>
        </div>
      </div>
    <% end %>
  </div>
</div>
