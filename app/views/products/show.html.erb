<div class="container mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
  <h1 class="text-3xl font-bold mb-4"><%= @product.name %></h1>

  <p class="text-xl mb-4">
    <strong>Price:</strong>
    <span class="text-green-600 font-semibold"><%= number_to_currency(@product.price) %></span>
  </p>

  <p class="mb-4">
    <strong>Description:</strong>
    <span class="text-gray-700"><%= @product.description %></span>
  </p>

  <p class="mb-4">
    <strong>Category:</strong>
    <span class="text-gray-700"><%= @product.category.name if @product.category %></span>
  </p>

  <div class="flex items-center space-x-4 mt-6">
    <%= link_to 'Back', products_path, class: 'bg-gray-500 text-white font-bold py-2 px-4 rounded hover:bg-gray-600' %>

    <%= form_with(model: CartItem.new(product_id: @product.id, quantity: 1), url: cart_items_path, method: :post) do |form| %>
      <%= form.hidden_field :product_id, value: @product.id %>
      <%= form.hidden_field :quantity, value: 1 %>
      <%= form.submit 'Add to Cart', class: 'bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600' %>
    <% end %>
  </div>
</div>
